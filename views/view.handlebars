<section id='viewJob'>
    <div class="jumbotron bg-primary">
        <div class="row justify-content-center text-center">
            <div class="col-sm-3">
                <p>{{ nume }}</p>
            </div>
            <div class="col-sm-3">
                <p>{{ model_masina }}</p>
                <p>{{ data_adaug }}</p>
            </div>
            <div class="col-sm-3">
                <p>{{ nr_inmatriculare }}</p>
                <p>{{ cost }}</p>
            </div>
        </div>
    </div>

    {{#each results}}
    <table class='table table-hover'>
        <thead>
            <tr class="table-primary">
                <th scope="row">{{ jobID}}</th>
                <td>{{ nume }}</td>
                <td>{{ rep_cost }}</td>
                <td>{{ descript }}</td>
            </tr>
        </thead>
    </table>
    {{else}}
    No results
    {{/each}}



</section>