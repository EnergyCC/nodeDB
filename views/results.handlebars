<section id='results content'>
    <h1>All results</h1>

    {{#each results}}

    <div class="container-fluid">
        <div class="card text-white mb-3 " style="background:rgba(45, 186, 252, 0.5)">
            <div class="card-header float-left">
                <div class="row">
                    <div class="col-sm-6">
                        <h3>{{nume}}</h3>
                    </div>
                    <div class="col-sm-6">
                        <a href="index/delete/{{profile_id}}" class="btn btn-danger float-right mr-3 mt-1">Delete</a>
                        <a href="index/edit/{{profile_id}}" class="btn btn-primary float-right mr-3 mt-1">Edit</a>
                        <a href="#" class="btn btn-primary float-right mr-3 mt-1">More</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <h4 class="card-title">Car model: {{model_masina}}</h4>
                        <h4 class="card-title">Plate number: {{nr_inmatriculare}}</h4>
                    </div>
                    <div class="col-sm-3">
                        <h4 class="card-title">Cost: {{cost}}</h4>
                    </div>
                    <div class="col-sm-3">
                        <h4 class="card-title">Date: {{data_adaug}}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{else}}
    <p>No results</p>
    {{/each}}
</section>