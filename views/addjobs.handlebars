<section id='addjobs'>
    <div class='jumbotron bg-primary text-center'>
        {{#if error}}
        <div class="alert alert-danger">
            {{text}}
        </div>
        {{/if}}
        <div class="container">
            <div class="row justify-content-center text-left">
                <form action='{{url}}' method='{{mth}}'>
                    <div class="form-group">
                        <label for='rep_cost' class='float-left'>Repair cost: </label>
                        <input type='text' name='rep_cost' class='form-control' id='nume'
                            placeholder="Input repair cost" value='{{rep_cost}}'>
                    </div>
                    <div class='form-group'>
                        <label for='descript' class='float-left'>Description: </label>
                        <input type='text' name='descript' class='form-control' id='descript'
                            placeholder="Input small description" value='{{descript}}'>
                    </div>
                    <div class='form-group'>
                        <label for='partRepl' class='float-left'>Part replaced: </label>
                        <input type='text' name='partRepl' class='form-control' id='partRepl'
                            placeholder="Input the part replaced" value='{{partRepl}}'>
                    </div>
                    <input type='submit' value='Add' class='btn btn-block btn-secondary'>
                    <a href='/index/view/{{profile_id}}' class='btn btn-block btn-outline-light'>Cancel</a>
                </form>
            </div>
        </div>
    </div>


</section>