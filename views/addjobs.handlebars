<section id='addjobs'>
    <div class='jumbotron bg-primary text-center'>
        {{#if error}}
        <div class="alert alert-danger">
            {{text}}
        </div>
        {{/if}}
        <div class="container">
            <div class="row justify-content-center text-left">
                <form action='{{url}}' method='{{mth}}'>
                    <div class="form-group">
                        <label for='rep_cost' class='float-left'>Cost reparatii: </label>
                        <input type='text' name='rep_cost' class='form-control' id='nume'
                            placeholder="Introdu cost pt. reparatii" value='{{rep_cost}}'>
                    </div>
                    <div class='form-group'>
                        <label for='descript' class='float-left'>Descriere: </label>
                        <input type='text' name='descript' class='form-control' id='descript'
                            placeholder="Descrie reparatia" value='{{descript}}'>
                    </div>
                    <div class='form-group'>
                        <label for='partRepl' class='float-left'>Piesa reparata: </label>
                        <input type='text' name='partRepl' class='form-control' id='partRepl'
                            placeholder="Piesa schimbata" value='{{partRepl}}'>
                    </div>
                    <input type='submit' value='Adauga' class='btn btn-block btn-secondary'>
                    <a href='/index/view/{{profile_id}}' class='btn btn-block btn-outline-light'>Anuleaza</a>
                </form>
            </div>
        </div>
    </div>


</section>